<script>
var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");
var width = c.width;
var height = c.height;
console.log(width);
console.log(height);
var coordinates = [[3,4],[7,8],[9,10],[20,40],[13,28],[40,40],[45,45],[49,49]];



function draw_map(num_w, num_h, width, height, coordinates){
  c_w = width/num_w;
  c_h = height/num_h;
  console.log(c_w);
  console.log(c_h);

  for(i = 0; i < num_w; i++)
  {
    for(j = 0; j < num_h; j++)
    {
	ctx.beginPath();
	ctx.arc( i * c_w ,j * c_h , 10 , 0 ,2*Math.PI);
        for(a = 0; a < coordinates.length; a++)
	{
                
		if(coordinates[a][0] == i && coordinates[a][1] == j)
		{
			console.log("filling out");
			ctx.fillStyle = 'red';
			ctx.fill();
		}
        } 
	ctx.stroke();
      
    }
  }

}


draw_map(50, 50, width, height, coordinates);
</script> 

